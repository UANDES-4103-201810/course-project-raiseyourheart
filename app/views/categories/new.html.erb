<div class="row">
  <header class="page-header">
    <h1 class="display-3 text-center">Create New Category</h1>
  </header>
</div>

<%= form_for(@category) do |f| %>
  <div class="col-sm-12 col-md-4 col-md-offset-1">
    <div class="row">
      <div class="field">
        <%= f.label :name %><br/>
        <%= f.text_field :name, autofocus: true,autocomplete: true, class: "form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="field">
        <%= f.label :description %><br/>
        <%= f.text_area :description, autocomplete: true, class: "form-control" %>
      </div>
    </div><br>
    <div class="row">
      <%= f.submit "Save Changes!" , class: "btn btn-success" %>
    </div>
  </div>
<%end%>