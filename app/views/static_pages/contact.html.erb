<div class="row">
  <div class="col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3">
    <header class="page-header">
      <h1 class="display-3 text-center">Contact Us!</h1>
    </header>
  </div>
</div>

<!--<div class="container">-->
  <%= form_tag("/static_pages/thank_you") do %>
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3">
        <div class="form-group">
          <%= label_tag :name, "Name" %>
          <%= text_field_tag :name, nil, class: "form-control", placeholder: "Enter Name", required: true %>
        </div>
        <div class="form-group">
          <%= label_tag :email, "Email Address" %>
          <%= text_field_tag :email, nil, class: "form-control", placeholder: "Enter Email", required: true %>
        </div>
        <div class="form-group">
          <%= label_tag :message, "Enter Message" %>
          <%= text_area_tag :message, nil, class: "form-control", placeholder: "Enter Message", required: true %>
        </div>
      </div>
    </div>
    <div class="col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3">
      <%= submit_tag "Send", class: "btn btn-success" %>
    </div>
  <% end %>
