<article id="user">
  <header>
    <h1><%= @user.first%> <%= @user.last%> </h1>
    <h2><%= @user.email %></h2>
  </header>
</article>

<footer>
  <nav>
  <% if current_user?(@user) %>
      <%= link_to 'Edit Account', edit_user_path(@user), class: 'button' %>
      <%= link_to 'Delete Account', @user,
                  method: :delete,
                  data: { confirm: 'Are you sure?' },
                  class: 'button' %>
    <% end %>
  </nav>
</footer>