<article id="user">
  <nav>
    <h1>Mi perfil</h1>
  </nav>
  <nav>
    <%if current_user?(@user) %>
      <h2><%= @user.first%> <%= @user.last%> </h2>
      <h2><%= @user.email %></h2>
    <% else %>
      <h3>No tiene permisos para actualizar este usuario</h3>
    <% end %>
  </nav>
</article>
<footer>
  <nav>
  <% if current_user?(@user) %>
      <%= link_to 'Edit Account', edit_user_path(@user), class: 'button' %>
      <%= link_to 'Delete Account', @user,
                  method: :delete,
                  data: { confirm: 'Are you sure?' },
                  class: 'button' %>
    <% end %>
  </nav>
</footer>