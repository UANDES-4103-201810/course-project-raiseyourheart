<header id="content-header">
  <h1>Sign In</h1>
</header>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <fieldset>
  <ol>
    <li class="required">
      <%= label_tag :email %>
      <%= email_field_tag :email, nil, autofocus: true, autocomplete: true, size: 40 %>
    </li>
    <li class="required">
      <%= label_tag :password %>
      <%= password_field_tag :password, nil, autocomplete: true, size: 40 %>
    </li>
  </ol>

  <% if devise_mapping.rememberable? -%>
    <div class="requiered">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <p>
    <%= submit_tag 'Sign In', class: "button" %>
  </p>
  </fieldset>
<% end %>

<%= render "devise/shared/links" %>

